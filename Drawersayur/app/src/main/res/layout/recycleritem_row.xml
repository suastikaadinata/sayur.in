<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/cradview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="9dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >

            <ImageView
                android:layout_gravity="center"
                android:id="@+id/gambar_sayur"
                android:layout_width="200dp"
                android:layout_height="140dp"
                android:src="@mipmap/ic_launcher"
                android:contentDescription="@string/todo" />

            <TextView
                android:id="@+id/nama_sayur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nama"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textAlignment="center"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/harga_sayur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="@string/harga"
                    android:textAlignment="textEnd"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="@string/kuantitas_barang"
                    android:textColor="#808080"
                    android:textSize="12sp" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <Button
                    android:id="@+id/button_tambah_sayur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:background="@drawable/selector_xml_btn_green"
                    android:drawableLeft="@drawable/ic_shopping_basket"
                    android:elevation="5dp"
                    android:paddingLeft="10dp"
                    android:text="@string/add"
                    android:textColor="#ffffff"
                    tools:targetApi="lollipop" />


                <LinearLayout
                    android:id="@+id/LayoutQ"
                    android:layout_width="91dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/custom_layout">

                    <Button
                        android:id="@+id/buttonMinus"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="30"
                        android:background="@drawable/minus_btn" />

                    <TextView
                        android:id="@+id/tV_jumlahSayur"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="30"
                        android:text="1"
                        android:textAlignment="center"
                        android:textColor="@color/colorTextGreen"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/buttonPlus"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="30"
                        android:background="@drawable/btn_add" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>