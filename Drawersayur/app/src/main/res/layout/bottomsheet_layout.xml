<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomsheet_sayur"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:orientation="vertical"
    android:background="#ffffff"
    app:behavior_hideable="false"
    app:behavior_peekHeight="50dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/custom_layout_bottom_sheet2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/cart"
            android:layout_width="40dp"
            android:layout_height="53dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:padding="3dp"
            android:src="@drawable/ic_shopping_basket_green_24dp"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/jumlah_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="28dp"
            android:padding="3dp"
            android:background="@drawable/cart_rec"
            android:gravity="center"
            android:text="10"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
            android:layout_marginLeft="28dp"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/TextJumlah_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="58dp"
            android:text="Rp. "
            android:textColor="@color/colorTextGreen"
            android:textSize="19dp"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="58dp" />

        <TextView
            android:id="@+id/Jumlah_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/TextJumlah_total"
            android:text="00"
            android:textColor="@color/colorTextGreen"
            android:layout_marginTop="10dp"
            android:textSize="19dp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/TextJumlah_total" />

        <TextView
            android:id="@+id/pay"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="Checkout >>"
            android:textColor="#5FAF50"
            android:textStyle="bold"
            android:layout_alignParentRight="true" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>


</LinearLayout>
